# Configuration du serveur
PORT=5000
NODE_ENV=development

# Configuration CORS (URLs autorisées)
CORS_ORIGIN=http://localhost:3000

# Base de données (à configurer selon votre choix)
MONGODB_URI=mongodb://localhost:27017/travel-agency
DATABASE_URL=postgresql://username:password@localhost:5432/
DATABASE_URL="file:./dev.db"  # pour SQLite

# Configuration JWT (pour l'authentification future)
JWT_SECRET=changez-moi
JWT_EXPIRES_IN=24h

# Configuration des logs
LOG_LEVEL=info
DEBUG=travel-agency:*